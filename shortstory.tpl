<div class="thumb">
	<div class="th-in">
		<a class="th-img img-resp-vert with-mask" href="{full-link}">
			<img data-src="{image-1}" src="{theme}/images/no-img.png" alt="{title}">
			<div class="th-mask fx-col fx-center fx-middle">
				<span class="fa fa-play"></span>
			</div>
			<div class="th-meta th-qual">ITunes</div>
			<div class="th-meta th-rate">
				<span>{rating}</span>
				<div class="th-rate-in">
					<div class="sr-plus"><span class="fa fa-thumbs-up"></span></div>
					<div class="sr-minus"><span class="fa fa-thumbs-down"></span></div>
					<div class="r3-hide">{rating}{vote-num}</div>
				</div>
			</div>
			<div class="th-meta th-info-btn"><span class="fa fa-info"></span></div>
		</a>
		<div class="th-desc">
			<a class="th-title" href="{full-link}">{title}</a>
			<div class="th-country nowrap">Россия</div>
		</div>
	</div>
</div>